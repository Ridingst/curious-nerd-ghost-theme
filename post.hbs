{{!< default}}
{{> header}}
<main class="main_teq" role="main">
	{{#post}}
	<article class="article_teq" role="article" itemscope itemtype="http://schema.org/Article">
		<header class="postheader_teq">
			<time class="date_teq" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
			<h1 class="posttitle_teq" itemprop="headline">{{title}}</h1>
		</header>
		<div class="postcontent_teq" itemprop="articleBody">
			{{content}}
		</div>
		{{#if tags}}
			<div class="posttags_teq">
				Tags: {{tags separator=" | "}}
			</div>
		{{/if}}
	    <div class="sharepost_teq">
		    <h4 class="share_teq">Share this post: &nbsp;</h4>
		    <a class="share_teq icon-twitter" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"><span class="hidethis_teq">Twitter</span></a>
		    <a class="share_teq icon-facebook" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}"><span class="hidethis_teq">Facebook</span></a>
		    <a class="share_teq icon-gplus" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><span class="hidethis_teq">Google+</span></a>
	    </div>
        {{#if author}}
        <footer class="postfooter_teq">
	    	<address itemscope itemtype="http://schema.org/Person">
	       		{{#if author.image}}
		        	<div class="authorimage_teq"><img src="{{author.image}}" itemprop="image" /></div>
		        {{/if}}
		        	<h4 class="authorname_teq"><span itemprop="author">{{author.name}}</span></h4>
		        {{#if author.website}}
		        	<div class="authorwebsite_teq"><a href="{{author.website}}" itemprop="url">{{author.website}}</a></div>
		        {{/if}}
	    	</address>
	        <div class="authorbio_teq">
	        	<p>{{author.bio}}</p>
	        </div>
        </footer>
        {{/if}}
	</article>
	{{/post}}
	{{#if pagination}}
		<div class="pagination_teq">
			{{{pagination}}}
		</div>
	{{/if}}
</main>
{{> footer}}